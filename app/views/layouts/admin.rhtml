<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <title>Guyaline Gallery Admin: <%= controller.controller_name + " : " + controller.action_name %></title>
  <%= stylesheet_link_tag 'admin' %>
  <%= javascript_include_tag :defaults, 'hyett_lightbox', 'upload_progress' %> 
</head>
<body>
<div id="wrapper">
	<div id="header">
		<div id="header_title"><h1>Guylaine's Gallery Admin: <%= controller.controller_name + " : " + controller.action_name %></h1></div>
	<div id="topmenu">
			<% unless controller.controller_name == "user" %>
			<ul id="nav">
				<li><%= link_to 'Galleries', { :controller => 'gallery', :action => 'index' } %></li>
		    </ul>
		<% end %>
	</div>	

		
</div><!-- end of div #header -->	

<div id="main">

<%= @content_for_layout %>

</div><!-- end of div #main -->
</div><!-- end of div #wrapper -->
</body>
</html>