
<h3>Galleries</h3>
<p style="margin:10px 0 0 0px;">Much more to come, please check back periodically.</p>
<div id="main-gallery">
<br class="clearboth" />
<ul>
<% for @gallery in @galleries %>
<li class="<%= cycle("one", "two", "three", "four") -%>"><span class="image-wrap"><%= link_to(image_tag(@gallery.images.sort_by{|i| i.position}.first.public_filename('size250')), 
					:action => 'show', :id => @gallery ) %>
</span></li>
<% end -%>
</ul>
<br class="clearboth" />



</div>
<br class="clearboth" />

