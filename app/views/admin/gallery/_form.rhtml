<%= error_messages_for 'gallery' %>
<br />
<label for="gallery_title_en">Title (en):</label>
<%= text_field 'gallery', 'title_en'  %><br />

<label for="gallery_title_fr">Title (fr):</label>
<%= text_field 'gallery', 'title_fr'  %><br />

<label for="gallery_description_en">Description (en):</label>
<%= text_area 'gallery', 'description_en', "cols" => 20, "rows" => 4  %><br />

<label for="gallery_description_fr">Description (fr):</label>
<%= text_area 'gallery', 'description_fr', "cols" => 20, "rows" => 4  %><br />

<label for="gallery_hidden">Hidden?:</label>
<%= check_box 'gallery', 'hidden' %><br />

<label for="save">&nbsp;<span id="submit_spinner" style="display:none;"><%= image_tag "spinner-trans.gif", :class => "spinner" %></span><br /></label>
<%= submit_tag 'Save', :class => "button" %>
